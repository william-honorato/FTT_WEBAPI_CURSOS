CREATE DATABASE Cursos;
USE Cursos;

CREATE TABLE Alunos(
	IdAluno INT(11) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
	Nome VARCHAR(50) NOT NULL,
    Email VARCHAR(50),
	Curso VARCHAR(50) NOT NULL,	
	DataCadastro DATETIME
);

CREATE TABLE Notas(
	IdNota INT(11) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    IdAluno INT(11) UNSIGNED,
	Nota VARCHAR(50) NOT NULL,
	DataCadastro DATETIME,
    CONSTRAINT FK_NotaAluno 
    FOREIGN KEY (IdAluno)
    REFERENCES Alunos(IdAluno)
);

CREATE TABLE Faltas(
	IdFalta INT(11) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    IdAluno INT(11) UNSIGNED,
	DataCadastro DATETIME,
    CONSTRAINT FK_FaltaAluno 
    FOREIGN KEY (IdAluno)
    REFERENCES Alunos(IdAluno)
);
